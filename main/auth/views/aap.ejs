<div class="row mt-5" id="form-container">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <form action="" method="" onsubmit="return true" id="aap-form">
                <div class="form-group">
                    <label for="input">Number of Adoptees</label>
                    <input type="input" id="participants" name="participants" class="form-control" placeholder="Enter Number of People Who Attended" />
                </div>
                <div class="form-group">
                    <label for="input">Bags Collected</label>
                    <input type="input" id="bagscollected" name="bagscollected" class="form-control" placeholder="Enter Bags Collected" />
                </div>
                <div class="form-group">
                    <label for="input">Time Spent</label>
                    <input type="input" id="timespent" name="timespent" class="form-control" placeholder="Enter Minutes" />
                </div>
                <div class="form-group">
                    <label for="input">Longitude</label>
                    <input type="input" id="bagscollected" name="long" class="form-control" placeholder="Enter Plot Coordinates" />
                </div>
                <div class="form-group">
                    <label for="input">Latitude</label>
                    <input type="input" id="bagscollected" name="lat" class="form-control" placeholder="Enter Plot Coordinates" />
                </div>
                <div class="form-group">
                    <label for="input">Date</label>
                    <input type="date" id="date" name="date" class="form-control" placeholder="" />
                </div>

                <button type="submit" class="btn btn-primary btn-block" id="submit-button">Enter Adopt A Plot Information</button>

            </form>
            <style type="text/css">
                input {
                    border-radius: 0% !important;
                }

                button {
                    border-radius: 0% !important;
                }
                #date {
                    color: gray;
                }
            </style>
        </div>
